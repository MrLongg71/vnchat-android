<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_dark"
    tools:context=".src.ui.SplashScreenActivity">

    <ImageView
        android:layout_margin="@dimen/margin45"
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        tools:ignore="ContentDescription" />
    <Button
        android:id="@+id/btnSignInSplash"
        android:text="@string/sign_in"
        android:theme="@style/TextButton"
        android:layout_marginTop="@dimen/margin45"
        android:layout_marginRight="@dimen/margin45"
        android:layout_marginLeft="@dimen/margin45"
        android:padding="@dimen/margin15"
        android:background="@drawable/custom_button_round_10dp_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnSignUpSplash"
        android:text="@string/sign_up"
        android:layout_gravity="bottom"
        android:theme="@style/TextButton"
        android:layout_marginTop="@dimen/margin15"
        android:layout_marginRight="@dimen/margin45"
        android:layout_marginLeft="@dimen/margin45"
        android:background="@drawable/custom_button_round_10dp_gray"
        android:padding="@dimen/margin15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>