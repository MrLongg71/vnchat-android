<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/heart">

    <target android:name="first_blade">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="0"
                android:propertyName="rotation"
                android:valueFrom="0"
                android:valueTo="100" />
        </aapt:attr>
    </target>

    <target android:name="second_blade">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="0"
                android:propertyName="rotation"
                android:valueFrom="0"
                android:valueTo="100" />
        </aapt:attr>
    </target>

    <target android:name="third_blade">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="0"
                android:propertyName="rotation"
                android:valueFrom="-100"
                android:valueTo="1" />
        </aapt:attr>
    </target>

</animated-vector>